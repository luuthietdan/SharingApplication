<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:background="@drawable/border_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"
                android:layout_marginLeft="4dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPostUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="start"
                    android:textSize="@dimen/username"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                    android:id="@+id/txtText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_your_status"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/status_size"
                    android:textStyle="bold"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/status_size"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/status_size"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/post_status"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:padding="3dp"
            android:textSize="@dimen/status"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/imgPostImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imgLovePost"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:baselineAlignBottom="false"
                android:background="@drawable/dislove"/>
            <ImageButton
                android:id="@+id/imgLikePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/dislike"/>


            <ImageButton
                android:id="@+id/imgsmile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/dissmile"/>

            <ImageButton
                android:id="@+id/imgComment"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="false"
                android:background="@drawable/comment"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtScorelove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="7dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_likes"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtScoreLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="60dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_likes"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtScoreSmile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
               android:layout_marginLeft="53dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/size_likes"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>