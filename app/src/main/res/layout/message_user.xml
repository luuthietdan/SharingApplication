<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_message_profile"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/circleimage"/>
    <TextView
        android:id="@+id/txtReceiverMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/img_message_profile"
        android:background="@drawable/receive_message_background"
        android:text="@string/receiver_message"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="@dimen/textsize_message"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="@+id/txtReceiverMessage"
        android:layout_marginTop="2dp"

        android:background="@drawable/send_message_background"
        android:text="@string/send_message"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="@dimen/textsize_message"
        android:textStyle="bold"/>
</RelativeLayout>