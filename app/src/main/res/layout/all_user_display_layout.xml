<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_profile"
    android:layout_margin="10dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAllUser"
        android:layout_marginLeft="10dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/user"
        />
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAllUserName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:layout_gravity="start"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/size_display_username"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtAllUserStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_status"
            android:layout_gravity="start"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/username"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>